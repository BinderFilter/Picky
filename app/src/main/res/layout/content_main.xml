<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.dartmouth.dwu.picky.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#ffffff">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Print Policy"
        android:textSize="25sp"
        android:id="@+id/printPolicyButton"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Policy"
        android:textSize="25sp"
        android:id="@+id/setPolicyButton"
        android:onClick="setUserFilter"
        android:gravity="center"
        android:layout_below="@+id/printPolicyButton"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/batteryLevelBToff"
        android:layout_below="@+id/setPolicyButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="72dp"
        android:hint="Battery Level BT off" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/batteryLevelBTon"
        android:layout_below="@+id/batteryLevelBToff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Battery Level BT on" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block Camera Requests "
        android:id="@+id/cameraSwitch"
        android:checked="false"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/batteryLevelBTon"
        android:layout_toLeftOf="@+id/setPolicyButton"
        android:layout_toStartOf="@+id/setPolicyButton" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block Get BT Status "
        android:id="@+id/btSwitch"
        android:checked="false"
        android:layout_below="@+id/cameraSwitch"
        android:layout_toLeftOf="@+id/setPolicyButton"
        android:layout_toStartOf="@+id/setPolicyButton" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block Get Battery Level "
        android:id="@+id/batterySwitch"
        android:layout_below="@+id/btSwitch"
        android:layout_alignRight="@+id/cameraSwitch"
        android:layout_alignEnd="@+id/cameraSwitch"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set temp filter"
        android:id="@+id/tempFilterButton"
        android:layout_below="@+id/setPolicyButton"
        android:layout_centerHorizontal="true"
        android:onClick="setTempFilter"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block Record Audio"
        android:id="@+id/blockRecordAudioSwitch"
        android:layout_below="@+id/batterySwitch"
        android:layout_alignRight="@+id/batterySwitch"
        android:layout_alignEnd="@+id/batterySwitch"
        android:checked="false" />

</RelativeLayout>
